<%# line_chart Expense.group_by_day(:date).count %>

<table>
	<thead>
		<th>Date</th>
		<th>Description</th>
		<th>Type</th>
		<th>Amount</th>
	</thead>
	<tbody>
		<% @expenses.each do |e| %>
			<tr>
				<td><%= e.date %></td>
				<td><%= e.description %></td>
				<td><%= e.type %></td>
				<td><%= e.amount %></td>
			</tr>
		<% end %>
	</tbody>
</table>